<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROGRAMACIÓN MULTIMEDIA"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#CCCCCC"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FBFF00">

            <Button
                android:id="@+id/btn_PrimerDiseño"
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:text="Primer Diseño"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0048FF"
                android:padding="8dp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/btn_SegundoDiseño"
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:text="Segundo Diseño"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:padding="8dp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/btn_TercerDiseño"
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:text="Tercer Diseño"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF0000"
                android:padding="8dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000" />

    </LinearLayout>

</LinearLayout>